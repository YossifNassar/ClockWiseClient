<Page
    x:Class="TryClock.SetAlarmPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TryClock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock Text="Set Alarm" Style="{StaticResource HeaderTextBlockStyle}" Width="365" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TimePicker x:Name="TimePicker"  HorizontalAlignment="Right" TimeChanged="TimePicker_TimeChanged" Margin="0,113,25,433" Width="365"/>
        <Button x:Name="btnSubmit" Content="Submit"
             Click="btnSubmit_Click" ClickMode="Press"
             Margin="225,209,0,374" Width="150" 
             HorizontalAlignment="Left" 
             Background="Blue"/>
    </Grid>
</Page>
