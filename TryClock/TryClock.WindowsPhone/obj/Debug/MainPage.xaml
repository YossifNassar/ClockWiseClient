<Page
    x:Class="TryClock.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TryClock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot x:Name="rootPivot" Title="Clock Wise">
            <Pivot.Background>
                <ImageBrush Stretch="Fill"
                        ImageSource="/Images/background2.png" 
                        AlignmentY="Center" 
                        AlignmentX="Center">
                </ImageBrush>
            </Pivot.Background>
            <PivotItem Header="Alarms">
                <!--Pivot content goes here-->
                <Grid Margin="0,-47,-0.333,46.833">
                    <Grid.Background>
                        <ImageBrush Stretch="Uniform"
                        ImageSource="/Images/clockback.png" 
                        AlignmentY="Center" 
                        AlignmentX="Center">
                        </ImageBrush>
                    </Grid.Background>
                    <TextBlock x:Name="textBlock" FontSize="80" HorizontalAlignment="Left" Margin="86,145,0,0" TextWrapping="Wrap" Text="07:00" VerticalAlignment="Top"/>
                    <ToggleSwitch x:Name="toggleSwitch" Header="" HorizontalAlignment="Right" Margin="0,280,83,0" VerticalAlignment="Top" Width="178"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Metrics">
                <!--Pivot content goes here-->
                <Grid>
                    <ListView Margin="10" Name="lvUsers" ItemsSource="{Binding Metrics}">
                    </ListView>
                    
                </Grid>

            </PivotItem>
            <PivotItem Header="Stats">
                <!--Pivot content goes here-->
                <TextBlock Text="Content of pivot item 3."/>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

